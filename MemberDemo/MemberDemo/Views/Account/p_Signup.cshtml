<form name="signup_form" class="form-horizontal" role="form" novalidate ng-submit="signup(m_signup)">
    <fieldset>
        <legend>Signup</legend>
    </fieldset>
    <div class="form-group">
        <label for="UserName" class="col-sm-4 control-label">UserName</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" name="UserName" placeholder="UserName" ng-model="m_signup.UserName" ng-minlength="3" ng-maxnlength="20" required>
            <div class="error-container" ng-show="signup_form.UserName.$dirty && signup_form.UserName.$invalid">
                <small class="error" ng-show="signup_form.UserName.$error.required">
                        Your username is required.
                </small>
                <small class="error" ng-show="signup_form.UserName.$error.minlength">
                        Your username is required to be at least 3 characters
                </small>
                <small class="error" ng-show="signup_form.UserName.$error.maxlength">
                        Your username cannot be longer than 50 characters
                </small>
@*                <small class="error" ng-show="signup_form.UserName.$error.email">
                        That is not a valid email. Please input a valid email.
                </small>*@
            </div>
        </div>
        <span class="help-block" ng-show="errUserName">{{errUserName}}</span>
    </div>
    <div class="form-group">
        <label for="Password" class="col-sm-4 control-label">Password</label>
        <div class="col-sm-8">
            <input type="password" class="form-control" name="Password" placeholder="Password" ng-model="m_signup.Password"  ng-minlength="6" ng-maxnlength="50" required>
            <div class="error-container bg-warning" ng-show="signup_form.Password.$dirty && signup_form.Password.$invalid">
                <small class="error" ng-show="signup_form.Password.$error.required">
                        Your password is required.
                </small>
                <small class="error" ng-show="signup_form.Password.$error.minlength">
                        Your password is required to be at least 6 characters
                </small>
                <small class="error" ng-show="signup_form.Password.$error.maxlength">
                        Your password cannot be longer than 256 characters
                </small>
            </div>
        </div>
        <span class="help-block" ng-show="errPassword">{{errPassword}}</span>
    </div>
    <div class="form-group">
        <label for="Password1" class="col-sm-4 control-label">Confirm Password</label>
        <div class="col-sm-8">
            <input type="password" class="form-control" name="Password1" placeholder="Password" ng-model="m_signup.Password1" required ng-match="m_signup.Password">
            <div class="error-container bg-warning" ng-show="signup_form.Password1.$dirty && signup_form.Password1.$invalid">
                <small class="error" ng-show="signup_form.Password1.$error.required">
                        Your confirm password is required.
                </small>
                <small class="error" ng-show="signup_form.Password1.$error.match">
                        Your confirm password do not match.
                </small>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="FirstName" class="col-sm-4 control-label">First Name</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" name="FirstName" placeholder="FirstName" ng-maxnlength="50" ng-model="m_signup.FirstName">
            <div class="error-container bg-warning" ng-show="signup_form.FirstName.$dirty && signup_form.FirstName.$invalid">
                <small class="error" ng-show="signup_form.FirstName.$error.maxlength">
                    Your FirstName cannot be longer than 100 characters
                </small>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="LastName" class="col-sm-4 control-label">Last Name</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" name="LastName" placeholder="LastName" ng-maxnlength="50" ng-model="m_signup.LastName">
            <div class="error-container bg-warning" ng-show="signup_form.LastName.$dirty && signup_form.LastName.$invalid">
                <small class="error" ng-show="signup_form.LastName.$error.maxlength">
                    Your LastName cannot be longer than 100 characters
                </small>
            </div>
        </div>
    </div>
    <div class="form-group bg-warning" ng-show="errmsg">
        <ul ng-repeat="msg in errmsg">
            <li>{{msg}}</li>
        </ul>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-default btn-primary">Signup</button>
        </div>
    </div>
</form>
