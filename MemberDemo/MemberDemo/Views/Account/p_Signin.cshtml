<form class="form-horizontal" role="form" action="@Url.Action("Login")" method="post">
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Login</legend>
    </fieldset>
    <div class="form-group">
        <label for="UserName" class="col-sm-4 control-label">UserName</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" name="UserName" placeholder="UserName" ng-model="m_signin.UserName">
        </div>
    </div>
    <div class="form-group">
        <label for="Password" class="col-sm-4 control-label">Password</label>
        <div class="col-sm-8">
            <input type="password" class="form-control" name="Password" placeholder="Password" ng-model="m_signin.Password">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="IsRemember" ng-model="m_signin.IsRemember">
                    Remember me
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-default btn-primary">Sign in</button>
        </div>
    </div>
</form>
